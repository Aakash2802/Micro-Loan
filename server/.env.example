# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/loansphere

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=1h

# Refresh Token (for future implementation)
# REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
# REFRESH_TOKEN_EXPIRES_IN=7d

# Email Configuration (Optional - for EMI reminders)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ==================
# Payment Gateway Configuration
# ==================

# Razorpay (Online Payments - Card, Net Banking, UPI, Wallets)
# Get keys from https://dashboard.razorpay.com/
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# UPI Direct Payment
UPI_VPA=loansphere@upi
UPI_PAYEE_NAME=LoanSphere Finance

# Bank Transfer Details (shown to customers)
BANK_NAME=HDFC Bank
BANK_ACCOUNT_NAME=LoanSphere Finance Pvt Ltd
BANK_ACCOUNT_NUMBER=50100123456789
BANK_IFSC=HDFC0001234
BANK_BRANCH=Main Branch, Mumbai

# Late Payment Penalty Configuration
LATE_PENALTY_PERCENT=2
LATE_PENALTY_PER_DAY=0.05

# Approval Workflow Configuration
# Officer can approve loans below this amount directly
# Loans >= this amount require admin approval
OFFICER_APPROVAL_LIMIT=100000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
